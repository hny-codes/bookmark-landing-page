---
import Browser from './Browser.astro';
---

<div>
  <div>
    <div class='text-center mb-10'>
      <h1 data-test='extension-header' class='text-2xl font-bold text-[--clr-very-dark-blue] mb-4'>Download the extension</h1>
      <p class='w-[70%] mx-auto text-[--clr-grayish-blue]'>We've got more browsers in the pipeline. Please do let us know if you've got a favourite you'd like us to prioritize. </p>
    </div>
    <div class='flex flex-col gap-8'>
      <Browser browserImg={'/images/logo-chrome.svg'} browser='Chrome' version='62' />
      <Browser browserImg={'/images/logo-firefox.svg'} browser='Firefox' version='55' />
      <Browser browserImg={'/images/logo-opera.svg'} browser='Opera' version='46' />
    </div>
  </div>
</div>